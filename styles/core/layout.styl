html body
    margin 0
    min-height 100%

body
    background color-bg

    &.dragging
        no-select()

.row
    grid-system()

.page-width
    page-width()
    position relative

section
    display block
    padding: 30px 0

    &:last-child
        margin-bottom 0

.center
    text-align center

.left
    float left

.right
    float right

.hidden
    display none

.transparent
    opacity 0
    position absolute

img.invert
    -webkit-filter: invert(100%)
    filter: invert(100%)
    
.kano-logo
    bg-image('layout/with-kano', contain)
    border-radius 0
    position absolute
    top 58px
    width 90px
    height 20px
    left 31px
    opacity 0.5
    transition opacity 0.3s linear

    &:hover
        opacity 1

.banner
    banner(color-orange, #fff)

.external-canvas
    position relative
    
    img
        width 100%

.image-canvas
    width 100%
    height 100%
    color black
    text-align center
    font-weight bold
    top 30%
    position absolute
    
    h1
        color black
        font-weight bold
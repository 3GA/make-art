html body
    margin 0
    min-height 100%

body
    background color-bg

.row
    grid-system()

.page-width
    page-width()

section
    display block
    padding 50px 0

.center
    text-align center

.editor-wrap
    padding 10px 0
    border-radius 3px
    overflow hidden
    background #F9F9F9
    position relative

    &:after
        display block
        content ''
        position absolute
        left 0
        top 0
        width: 42px
        height 100%
        background #ebebeb

#editor
    min-height 300px
    font-size 15px
    position relative
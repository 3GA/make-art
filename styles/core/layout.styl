html body
    margin 0
    min-height 100%

body
    background color-bg

header
    background color-primary
    border-bottom 4px solid darken(color-primary, 10%)
    padding 20px

    a.logo
        display block
        text-align center
        font-family font-special
        color color-white
        font-size 50px
        line-height 60px
        position relative
        top 5px
        text-shadow 0 2px rgba(#000, .15)

.row
    grid-system()

.page-width
    page-width()

section
    display block
    padding 50px 0

.center
    text-align center
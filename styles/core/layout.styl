header-height = 45px

html body
    margin 0
    min-height 100%

body
    background color-bg

.row
    grid-system()

.page-width
    page-width()

section
    display block
    padding 50px 0

.center
    text-align center

.left
    float left

.right
    float right

.hidden
    display none

.transparent
    opacity 0
    position absolute

img.invert
    -webkit-filter: invert(100%);
    filter: invert(100%);

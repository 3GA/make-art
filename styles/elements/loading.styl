[ng-cloak]
    display none

.loading-overlay
    display none
    position fixed
    left 0
    top 0
    width 100%
    height 100%
    z-index 999
    background #333

    .spinner
        position absolute
        top 50%
        left 50%
        margin-left -17px
        margin-top -17px

    &[ng-cloak]
        display block

.spinner
    display block
    width 34px
    height @width
    background #fff url('../assets/layout/spinner.gif') center center no-repeat
    background-size @width @width
    margin auto
    border-radius 100%
    padding 5px
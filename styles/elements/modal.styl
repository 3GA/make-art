

.modal-overlay
    absolute-cover()
    background rgba(#000, .8)
    transition opacity .2s
    position fixed
    z-index 9

    &.out
        opacity 0

.modal-inner
    background color-white
    border-radius()
    position absolute
    left 50%
    top 150px
    margin-left -300px
    width 600px
    box-sizing border-box
    padding 25px
    min-height 50px

    button.close
        button-color(color-white, color-grey)
        padding 0
        font-size 22px
        width 36px
        line-height 36px
        text-align center
        position absolute
        right 10px
        top 10px

        &:hover
            background color-grey-mid

        i
            position relative
            top 2px

    &.size-small
        width 300px
        margin-left -150px

    p:last-child
        margin-bottom 0

    h1, h2, h3, h4, h5, h6

        &:first-child
            margin-top -10px

    &.split-modal
        padding-bottom 85px

        .bottom-section
            position absolute
            bottom 0
            left 0
            right 0
            background color-grey-mid
            border-bottom-left-radius 3px
            border-bottom-right-radius 3px

            button
            .button
                margin 20px
                color color-white
                background color-green

                &:hover
                    background lighten(color-green, 5)

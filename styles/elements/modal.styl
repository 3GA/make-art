

.modal-overlay
    full-cover()
    background rgba(#000, .8)
    transition opacity .2s
    position fixed
    width 100%
    height 100%
    left 0
    top 0
    z-index 9

    &.out
        opacity 0

.modal-inner
    background color-white
    border-radius()
    position absolute
    left 50%
    top 150px
    margin-left -300px
    width 600px
    box-sizing border-box
    padding 25px
    min-height 50px

    button.close
        button-color(color-grey-light, color-black)
        padding 0
        width 30px
        line-height 30px
        text-align center
        position absolute
        right 10px
        top 10px

        i
            position relative
            top 2px

    &.size-small
        width 300px
        margin-left -150px

    p:last-child
        margin-bottom 0

    h1, h2, h3, h4, h5, h6

        &:first-child
            margin-top -10px
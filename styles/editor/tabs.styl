editor
    position relative

    .editor-docs, .editor-wrap
        margin-left editor-tabs-size + 20px

    ul.editor-tabs
        debullet()
        position absolute
        left 0
        top 0

        li
            border-radius()
            font-size 20px
            width editor-tabs-size
            height editor-tabs-size
            line-height editor-tabs-size
            text-align center
            margin-bottom 10px
            background lighten(color-editor-bg, 20)
            cursor pointer

            &.active
                background color-orange
                
            &.divide
                cursor default
                height 3px
                background rgba(color-editor-bg, .6)
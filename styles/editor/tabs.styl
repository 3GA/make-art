editor ul.editor-tabs
    debullet()
    clearfix()
    border-radius(3px 3px 0 0)
    background color-editor-bg
    padding-bottom 10px
    margin 0
    overflow hidden

    li
        smooth-font()
        cursor pointer
        width 50%
        float left
        background color-editor-bg
        padding 15px
        box-sizing border-box
        background lighten(color-editor-bg, 10)
        text-align center
        font-weight bold
        text-transform uppercase
        font-size 14px

        &.active
            background color-editor-bg
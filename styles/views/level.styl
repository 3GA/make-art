.page-level

    .success-display
        absolute-cover()
        bg-inverse color-green
        padding 20px
        box-sizing border-box
        clearfix()
        text-align center
        background-image radial-gradient(rgba(#fff, .3), rgba(#fff, .0))
        border-radius()

        h3
            margin-top 120px
            font-weight bold
            text-transform uppercase

    editor.disabled
        background color-white
        position relative

        &:after
            content ''
            display block
            absolute-cover()
            bg-image-sized('characters/judoka/explaining', center center, no-repeat)
            margin-top 100px
            margin-left 40px
.summer-camp
	
	.calendar
		list-style none
		padding 0
		margin 0
		
		li
			display inline-block
			min-width 14.2857%
			
		.weekdays
			background-color color-grey-darker
			padding 10px 0
			text-align center
			text-transform uppercase
			
		.day
			background-color color-grey-mid
			float left
			box-shadow 0 0 0 0.5px darken(color-grey-darker, 2)
			
			&:hover
				background-color darken(color-grey-mid, 10)
				
			&:nth-child(7n+6),&:nth-child(7n)
				background-color color-grey-lighter
				
				&:hover
					background-color darken(color-grey-lighter, 10)
					
			a
				display block
				position relative
				text-align center
				
				.cover
					position relative
					background-position center center
					background-size cover
					background-repeat none
					padding-bottom 100%
					
					span
						position absolute
						right 8px
						top 3px
						color color-orange
						font-size 1.2rem

				.detail
					padding 10px
					
					h5
						ellipsis()
						smooth-font()
						font-weight bold
						font-size 15px
						overflow visible
						text-align left
					
						&:after
							icon()
							circle(20px, transparent)
							float right
							font-size 9px
							margin-top 3px
							margin-right 3px
							color color-white
							line-height 22px
							margin 0
				
				&.current
					box-shadow rgba(color-blue, 1) 0 0 0 3px
					
					.cover
						opacity .5
					
					.detail
						background color-blue
						
						h5:after
							content '\e615'
							background darken(color-blue, 10)
				
				&.completed
					
					.detail
						background color-green
						box-shadow 0 0 0 0.5px color-grey-lightest
						
						h5
							color #fff
							
							&:after
								content '\e61d'
								background darken(color-green, 5)
						
				&.locked
					filter(grayscale(100%))
					
					.cover, h5
						opacity .3
						
					.detail
						background color-grey-light
						
						h5:after
							content '\e621'
							margin-top 0
							background darken(color-grey-light, 10)
.summer-camp
	
	.countdown
		padding 80px 0
		background url("/assets/summercamp/wood-asset.png") no-repeat
		background-size contain
		background-position center center
		
		span
			margin 0 10px
			font-size 4em
			font-weight 500
			color #fff
			
			&:first-child
				margin-left 0

			&:last-child
				margin-right 0
		
		.days
			display block
			font-size 6em
			margin-bottom 20px
	div.sc-calendar
		background-color white
		border-radius 5px
		h2
			color black
			text-align center
			margin 0 0 0 0
			padding 20px 0 0 0
			font-weight bold
		h4 
			color black
			text-align center
			text-transform uppercase
			font-size 14px
			margin 0
			font-weight bold
			
			
	.calendar
		list-style none
		padding 0
		margin 20px 0
		
		li
			box-sizing border-box
			display inline-block
			width 14.2857%
			
			
		.weekdays
			
			color color-grey-darker
			padding 10px 0
			text-align center
			text-transform uppercase
			
		.day
			background-color white
			float left
			box-shadow 0 0 0 0.1px darken(color-grey-darker, 2)

				
			&:nth-child(7n+6), &:nth-child(7n)
				background-color white
				
			a
				border 3px solid #A6DA3B
				display block
				position relative
				text-align center
				
				.cover
					position relative
					background-position center 25px
					background-size cover
					background-repeat none
					height 90px 
					span
						border-radius(0 0 0 5px)
						display block
						padding 4px 10px
						position absolute
						right 0
						top 0
						background-color #fff
						color color-orange
						font-size 1.2rem
					&.challenge_1 
						bg-image('assets/summercamp/ch_icons/')


				.detail
					padding 10px
					text-align center
					h5
						ellipsis()
						smooth-font()
						width 100%
						font-weight bold
						font-size 15px
						overflow visible
						text-align center
						color color-grey-darker

				&.current
					.cover
						opacity .8
				
				&.completed
			
					&:hover
						background-color color-green
				
					.detail
						
						h5
							color #fff
							
							&:after
								content '\e61d'
								background darken(color-green, 5)
						
				&.locked
					filter(grayscale(100%))
					cursor default
					border 3px solid color-grey 
					opacity .3
					
					.cover
						bg-image('summercamp/ch_icons/question', 70px 70px, false, no-repeat)
						
				&.unlocked
					
					&:hover
						background-color color-orange
					
					.cover
						opacity .5
					
	.challenge-info

		.pic 
			display inline-block
			width 29%
			height 277px
			img 
				border-radius 4px
				height 100%
				width 100%
		.detail
			font-family bariol
			display inline-block
			box-sizing border-box
			width 70%
			vertical-align top
			padding 0px 0 0 25px
			color #ada799
			span.cont-label
				font-size 11px
				margin 10 0 0 0
				display block
				color white
			div 
				border none
				margin 10px 0 0 0
				padding 0
			div.btn-container
				display inline-block
				width 45%
				text-align right
				vertical-align top
				padding 18px 0 0 0 
			div.rewards-container
				display inline-block
				width 25%
				vertical-align top
				a
					display inline-block
					float left
					width 40px
					height 40px
					margin-right 15px
				a.rew-wallpaper
					bg-image('summercamp/wallpaper', 40px 40px, false, no-repeat)
					
				a.rew-outfit
					bg-image('summercamp/suit', 40px 40px, false, no-repeat)
					
				
			div.diff-container
				display inline-block
				width 25%
			
				.difficulty-level
					display inline-block
					width 100%
					margin 0 0 20px 0
					padding 0

					span
						display inline-block
						width 40px
						height 40px

						&.l-easy
							bg-image('summercamp/off_easy', 40px 40px, false, no-repeat)
							

						&.l-medium
							bg-image('summercamp/off_medium', 40px 40px, false, no-repeat)
							
						&.l-hard
							bg-image('summercamp/off_hard', 40px 40px, false, no-repeat)
							

					&[data-level="l-1"]
						span
							&.l-easy
								bg-image('summercamp/easy', 40px 40px, false, no-repeat)

					&[data-level="l-2"]
						span
							&.l-medium
								bg-image('summercamp/medium', 40px 40px, false, no-repeat)
								
					&[data-level="l-3"]
						span
							&.l-hard
								bg-image('summercamp/hard', 40px 40px, false, no-repeat)
								
			h4
				text-transform uppercase
				font-size 11px
				font-weight normal
				margin 0 0 10px 0
				color #fff

			h3 
				color #fff
				margin 0 0 10px 0
			.description
				p
					font-size 15px
					line-height 22px
					min-height 145px

.modal-register
	h3
		smooth-font()
		font-weight bold
		margin-bottom 20px
		
	input[type='text']
	input[type='password']
	input[type='email']
	input[type='number']
	input[type='tel'],
	input[type='date']
	textarea
		padding 9px 15px
		background color-white
		display inline-block
		border 1px solid color-ruler-contrast
		border-radius()
		font-family type-body-font
		type-size 1.3
		margin-right 0px
		margin-bottom 20px
		box-sizing border-box
		box-shadow 0 2px 0 0 rgba(#000, .03) inset
		
		&:last-child
			margin-right 0
			margin-bottom 0
			
		&:focus
			border 1px solid color-primary
			outline 0
		
		&.block
			width 100%



.modal-inner.splash, .modal-inner.challenge-complete
    background color-bg

    .logo-title
        illustration-fixed('layout/draw-logo')
        margin 30px auto 20px

        img
            vertical-align middle

        img:last-of-type
            margin-left 20px

    h3, h4
        color color-white

    h4
        margin-bottom 50px

    h3
        smooth-font()
        margin-bottom 10px
        font-weight bold

    .bottom-section
        background lighten(color-bg, 10)

.modal-inner.challenge-complete

    h4
        margin-bottom 10px

    .logo-title
        margin-bottom 50px

    button.close
        text-align center
        width 30px
        line-height @width
        padding 0
        margin-top 10px

        i
            font-size 11px
            position static
display
    display block
    width 100%
    padding-top 100%
    position relative

    canvas
        absolute-cover()
        background #fff
        border-radius()

    .error-display
        background color-red
        text-align center
        position absolute
        left 0
        top 0
        width 100%
        height @width
        box-sizing border-box
        padding 35% 20px 0

        &, h3
            color color-white

        h3
            margin-bottom 10px

        p
            font-size 20px

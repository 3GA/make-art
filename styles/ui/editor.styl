// HACK: Force the ACE gutter size to a fixed width
gutter-size(width)

    .ace_scroller
        left 30px !important

    .ace_gutter-layer
        width 30px !important

editor-tag(color=color-primary, color-text=#fff)
    background color
    padding 2px
    margin 0 -2px
    border-radius()
    color color-text

autocomplete-tag(color)
    color color

body.full-screen-editor
    overflow hidden

    .editor-area
        position fixed
        left 0
        top 0
        width 100%
        height 100%
        z-index 5
        
    display
        position fixed
        right 10px
        top 10px
        z-index 5
        width 460px
        height @width
        padding-top 0
        
    .controls
        position fixed

editor
    display block
    height 100%
    position relative
    
    .controls
        position absolute
        z-index 1
        right 10px
        bottom 10px
        z-index 8

        a
            width 40px
            height @width
            line-height @width
            text-align center
            background-color #585858
            display inline-block
            border-radius()
            transition background-color .2s
            margin-left 10px
        
            &:hover
                background-color #333

            &.active
                background-color #aaa
                
                &:hover
                    background-color #bbb

        .button-full-screen
            bg-image-sized 'button-icons/full-screen', center center, no-repeat

        .button-autocomplete
            bg-image-sized 'button-icons/autocomplete', center center, no-repeat

    .editor-area
        border-radius()
        min-height 460px
        height 100%
        
        &.full-screen

        &.disabled
            background #eee

            .ace_cursor
                display none

            > *
                opacity .3

        &.completed
            background mix(#fff, color-success, 20%)

            > *
                opacity .4

        &.ace_editor
            line-height 26px
            font-size 13px
            background color-editor-bg

            .ace_cursor
                color rgba(#fff, .5)

            gutter-size(35px)

            .ace_gutter
                background color-editor-gutter
                // width 20px !important

            .ace_gutter-cell
                color lighten(color-editor-gutter, 20)
                font-family font-body
                font-weight bold
                padding 0
                padding-right 10px
                // width 20px !important

            .ace_gutter-active-line
                // Disable active line state background 
                background transparent

            .ace_marker-layer .ace_selection
                background color-editor-selection

            .ace_print-margin
                background rgba(#fff, .2)
                display none
                
            .ace_content .ace_line
                .ace_comment
                    color #aaa

                .ace_keyword
                    editor-tag(color-language-keyword, color-black)

                .ace_string
                    editor-tag(color-language-string)

                .ace_numeric
                    editor-tag(color-language-number)

                .ace_identifier
                    editor-tag(color-language-identifier)

                .ace_language
                    editor-tag(color-language-language)
                
.ace-dawn.ace_editor.ace_autocomplete
    border-radius()
    background color-editor-box
    border 0
    color color-white
    box-shadow none
    font-family font-body
    font-size 15px

    &, .ace_line
        line-height 30px

        ::-webkit-scrollbar
            display: none

        // .ace_command
        //     autocomplete-tag(color-language-identifier)

        .ace_color
            // autocomplete-tag(color-language-string)
            autocomplete-tag(mix(color-editor-box, color-white, 30))

    .ace_line
        padding 0 10px

    .ace_rightAlignedText
        padding-right 5px
        font-style italic

    .ace_marker-layer .ace_active-line
        background darken(color-editor-box, 10)
        
    .ace_marker-layer .ace_line-hover
        background darken(color-editor-box, 5)
        border 0
        padding-top 1px
section: .page-width

    h2.center Playground
    h4.center Draw whatever you want

    .row
        .col-6
            editor(ng-model='playground.code', editable='true', auto-select='false', workspace)
        .col-6
            display(ng-source='playground.code', workspace)

    span(ng-repeat="dialog in exportDialogs", ng-controller='export')
        a.button(ng-if='!(dialog === "save" && !offline)',  ng-click='openDialog()') {{ dialog }}

        include partial/export

    span(ng-controller='loadDialog' ng-if='offline')
        a.button(ng-click='openDialog()') Load

        include partial/load

    include partial/docs

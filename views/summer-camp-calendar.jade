.summer-camp: .page-width

    h3.page-title
        i.icon-menu
        | Summer Camp Calendar

    .challenge-info(ng-if='selectedSummerChallenge !== null')
            .pic
                img(src='{{selectedSummerChallengeObj.img}}')
            .detail

                h4 August {{selectedSummerChallenge + 1 | ordinal}}
                h3 {{ selectedSummerChallengeObj.title }}

                div.description(ng-bind-html='selectedSummerChallengeObj.description | markdown ')
                span.difficulty DIFFICULTY
                .difficulty-level(data-level='{{ "l-" + selectedSummerChallengeObj.difficulty }}')

                    span.l-easy
                    span.l-medium
                    span.l-hard
                a.button(ng-if="!started" ng-href='/summer-camp/challenge/{{ selectedSummerChallenge }}') Start Making
                a.button.button-success(ng-if="started" ng-href='/summer-camp/challenge/{{ selectedSummerChallenge }}') Continue
                a.button(ng-if="started" ng-href='/summer-camp/challenge/{{ selectedSummerChallenge }}')
                    span.icon-reset
    ul.calendar
        li.weekdays(ng-repeat='weekday in weekdays') {{weekday}}
        li.day(ng-repeat='day in range(21)') 
            a(
                ng-click='selectChallenge(day)',
                ng-class='{ locked: isLocked(day), completed: isCompleted(day), current: isCurrent(day) }',
                )
                .cover(style='background-image: url("/assets/challenges/playground.png")')
                    span  {{day}}
                .detail
                    h5 Challenge {{ day }}



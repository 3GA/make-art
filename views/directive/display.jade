.draw-display

    .display: .padded: .inner

        canvas(
            ng-mousemove='displayMousePos($event)'
            ng-mouseleave='displayCursorPos()'
            )

        .error-display(ng-if='error')
            h3 Error on line {{ error.row + 1 || 0  }}
            p {{ error.text || 0 }}

        .toolbar
            .position-indicator x: {{ cursorPosition.x }} y: {{ cursorPosition.x }}

    .actions
        a.action-share(ng-if='mode === "playground"')
            i.icon-share
            |  Share

        a.action-save(ng-if='mode === "playground"')
            i.icon-save
            |  Save

        a.action-reset(ng-if='mode === "level"')
            i.icon-reset
            |  Reset
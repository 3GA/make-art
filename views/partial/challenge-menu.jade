.modal-overlay(ng-show='menuOpen', ng-cloak): .modal-inner.split-modal.challenges-menu
    button.close(ng-click='menuOpen = false') &times;
    div.challenge-info
        h6.center CHALLENGE {{ lastChallengeVisited.get() }} OF {{ challenges.length }}
        h2.center {{ challenges[lastChallengeVisited.get() - 1].title }}
        h4.center {{ challenges[lastChallengeVisited.get() - 1].description }}

    ul.challenges-list
        li(ng-repeat='challenges in challenges', ng-controller='ChallengeMenuItemController')
            a.button(
                ng-href='{{ isLocked() ? "" : "/challenge/" + challengeNo }}',
                ng-click='!isLocked() ? menuOpen = false : ""',
                ng-class='{ "locked" : isLocked(), "unlocked" : !isLocked(), "lastUnlocked" : isLastUnlocked() }'
                ) {{ challengeNo }}
            .challenge-title {{ challenge.title.toUpperCase() }}

        li
            a.button.playground(ng-href='/playground', ng-click='menuOpen = false') Playground
            div.challenge-title BE CREATIVE

        .center.bottom-section
            a.button(ng-href='/challenge/{{ lastChallengeVisited.get() }}') START
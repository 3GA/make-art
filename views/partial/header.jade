header: .page-width

    a.logo(href='/')
        span.logo-image
        span.logo-title

    ul.nav.nav-left
        li: a(href='#', ng-click='menuOpen = !menuOpen') Challenges
        li: a(href='/playground') Playground

    ul.nav.nav-right
        li(ng-if='!offline && !loggedIn'): a(href='#', ng-click='login()') Login
        li(ng-if='!offline && loggedIn'): a(href='#', ng-click='logout()') Logout

        li(ng-if='!offline && loggedIn')
            a.user-display(ng-href='http://world.kano.me/users/{{ user.username }}', target='_blank')
                .avatar: img(ng-src='http://avatar.kano.me/username/{{ user.username }}.png')
                | {{ user.username }}


        li: button.close(ng-click='shutdown()', ng-if='offline') &times;
header: .page-width

    a.logo(href='/')

    ul.nav.nav-left

        li: a(href='/challenges', ng-class='{ active: basePath === "challenge" || basePath === "challenges" }')
            i.icon-menu
            |  Challenges

        li: a(href='/playground', ng-class='{ active: basePath === "playground" }')
            i.icon-game
            |  Playground

        li.coming-soon: a(href='http://www.kano.me/summercamp', ng-class='{ active: basePath === "summercamp" }')
            i.icon-campfire
            |  Summer Camp
            div Coming soon

    ul.nav.nav-right(ng-cloak)

        li(ng-if='!offline && !loggedIn'): a(href='#', ng-click='login()')
            i.icon-login
            |  Login

        li(ng-if='!offline && loggedIn')
            a.user-display(ng-href='http://world.kano.me/users/{{ user.username }}', target='_blank')
                .avatar: img(ng-src='http://avatar.kano.me/username/{{ user.username }}.png')
                | {{ user.username }}

        li: button.close(ng-click='shutdown()', ng-if='offline'): i.icon-cross

.summercamp
    a(href="http://www.kano.me/summercamp" class="banner")
        img(src="/assets/summercamp/logo.png")
        span Free coding challenges:
        |   Every day for three weeks this summer.  {{summerCampStarted ? "Start now" : "Enroll now"}}.

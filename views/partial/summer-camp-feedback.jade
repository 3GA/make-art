.modal-overlay(ng-if='!feedbackOpen')
    .modal-inner.center.summercamp-feedback(ng-controller='SummerCampFeedbackController')

        .top
            h4.title Make us better
            h6.byline And get a Summer Camp badge!

        .bottom
            ul
                li.prompt
                    .question What did you like the most?
                    input.answer
                li.prompt
                    .question What didn't you like?
                    input.answer
                li.prompt
                    .question How likely are you to recommend Kano to a friend?
                    .answer.rating
                        ul.scale
                            - var n = 1
                            while n <= 10
                                li.rating-number
                                    input(id=n type='radio' name='recommend' value=n)
                                    label(for=n)=n++
                        span.rating-label.left Never
                        span.rating-label.right Likely
                        .clear
                li.prompt
                    .question What should we do next?
                    input.answer

            .logo-title

            .center

                a.button.large.button-success(ng-href='/playground') Send and claim badge
